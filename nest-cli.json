{
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "builder": {
            "type": "swc",
            "options": {
                "swcrcPath": ".swcrc"
            }
        },
        "sourceMap": true,
        "typeCheck": true,
        "plugins": [
            {
                "name": "@nestjs/swagger",
                "options": {
                    "classValidatorShim": false,
                    "introspectComments": false
                }
            }
        ],
        "assets": [
            {
                "include": "languages/**/*",
                "outDir": "dist"
            },
            {
                "include": "**/**/templates/*",
                "outDir": "dist"
            }
        ],
        "deleteOutDir": true,
        "watchAssets": true
    },
    "projects": {
        "app": {
            "type": "application",
            "root": "src",
            "entryFile": "main",
            "sourceRoot": "src"
        },
        "migration": {
            "type": "application",
            "root": "src",
            "entryFile": "migration",
            "sourceRoot": "src"
        }
    }
}
